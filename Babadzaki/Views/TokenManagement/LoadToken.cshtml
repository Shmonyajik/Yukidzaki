@{
    var title = "Load Token";
    
}
<div id="LoadJsonToken">
<form method="post" enctype="multipart/form-data" asp-action="LoadJsonTokenPost">
     <div class="border p-3">
         <div class="form-group row">
            <h2 class="text-info pl-3">@title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <input type="file" accept=".json" multiple="multiple" name="files" id="jsonPath" itemid="uploadBox"  class="form-control" />
        </div>
        <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                                <input type="submit" onclick="return validateInput()" class="btn btn-primary w-100" value="Load"  />
                        </div>
                    </div>
        </div>
    </div>
    </div>

</form>
</div>