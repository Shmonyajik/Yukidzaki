@model Babadzaki.Models.Token
@using Babadzaki_Utility

@{
    var title = "Delete Token";
}
<form method="Post">
    
       
        <input asp-for="Id" hidden />
        @*Скрытое поле для согласованности с моделью*@
    
    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3">@title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control" />
                        
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="SeasonCollectionId"></label>
                    </div>
                    <div class="col-8">
                      
                        <input asp-for="SeasonCollection.Name" disabled class="form-control" />
                        
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Description" disabled class="form-control summernote"></textarea>
                        
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        Image
                    </div>
                    <div class="col-8">
                        <input type="file" accept=".jpg,.png,.gif,.bmp" name="files" id="ImagePath" itemid="uploadBox" asp-for="@Model.Image" disabled class="form-control" />
                        @if (Model.Image != "")
                        {
                            <label for="ImagePath">@Model.Image</label>
                        }

                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                                <button type="submit" class="btn btn-danger w-100">Delete</button>
                        </div>

                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4 ">
                @* Keep this empty *@
                @if (Model.Image != null)
                {
                    <img src="@WebConstants.ImagePath@Model.Image" width="100%" style="border-radius:5px;border:1px; solid #bbb" />
                }
            </div>
        </div>
    </div>

</form>

@section Scripts{

    @{
        <partial name-"_ValidationScriptsPartial" />
        /*Валидация на стороне клиента*/
    }
    <script>
        th: utext = $(document).ready(function () { //текстовый редактор TODO: экранировать от html тегов
            $('.summernote').summernote({
                disable:true,
                height: 250
            });
        });

        
    </script>
}