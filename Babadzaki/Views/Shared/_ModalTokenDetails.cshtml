            <div class="list-product">
            @foreach (var type in Model.TokensFilters)
            {
               
                    <div class="box corner-box ">
                        <p class="col-sm-2">@Html.DisplayFor(modelItem => type.Filter.Name)</p>
                        <h6 class="h7 col-sm-10">@Html.DisplayFor(modelItem => type.Value)</h6>
                    </div>
            }
