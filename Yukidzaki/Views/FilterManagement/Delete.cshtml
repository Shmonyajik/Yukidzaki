@model Yukidzaki.Models.Filter
@using Babadzaki_Services

@{
    var title = "Delete Token";
    var tf = Model.TokensFilters.Select(tf => tf.Value).Distinct().ToList();
}
<form method="Post">
    
       
        <input asp-for="Id" hidden />
        @*Скрытое поле для согласованности с моделью*@
    
    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3">@title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control" />
                        
                    </div>

                </div>
        </div>
    </div>
       
        @foreach (var item in tf)
        {
                <tr>
                    <td>
                    @Html.DisplayFor(modelItem => item)
                    </td>

                </tr>
        }
    <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                                <button type="submit" class="btn btn-danger w-100">Delete</button>
                        </div>

                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
</form>

